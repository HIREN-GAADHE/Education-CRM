# Application Settings
APP_NAME=EduERP
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Database - REPLACE WITH YOUR PRODUCTION DATABASE CREDENTIALS
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://your_db_user:your_secure_password@your-db-host:5432/eduerp_prod

# Security - GENERATE A NEW SECRET KEY FOR PRODUCTION
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=REPLACE_WITH_GENERATED_SECRET_KEY
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Configure allowed origins
# Use ["*"] to allow all domains (less secure but flexible)
# Or specify domains: ["https://yourdomain.com", "https://www.yourdomain.com"]
CORS_ORIGINS=["*"]

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
